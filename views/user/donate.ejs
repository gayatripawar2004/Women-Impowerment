    <script>
document.addEventListener("DOMContentLoaded", function () {

    const btn = document.getElementById("completeDonationBtn");
    const form = document.getElementById("donationForm");

    const requiredFields = [
        document.querySelector('input[name="donar_name"]'),
        document.querySelector('input[name="donar_email"]'),
        document.querySelector('input[name="donar_mobile"]'),
        document.querySelector('input[name="prize"]'),
        document.getElementById("cardName"),
        document.getElementById("cardNumber"),
        document.getElementById("expiryDate"),
        document.getElementById("cvv"),
        document.getElementById("privacyPolicy")
    ];

    function checkAllFilled() {
        let allFilled = true;

        requiredFields.forEach(field => {
            if (field.type === "checkbox") {
                if (!field.checked) allFilled = false;
            } else {
                if (!field.value.trim()) allFilled = false;
            }
        });

        btn.disabled = !allFilled;
    }

    requiredFields.forEach(field => {
        field.addEventListener("input", checkAllFilled);
        field.addEventListener("change", checkAllFilled);
    });

    
  

});
</script>

    