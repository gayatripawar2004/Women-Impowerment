        <!-- Recent Activity Section -->
        <div class="row mt-4">
            <div class="col-md-8">
                <%
function getIcon(type){
    if(type === 'volunteer') return { icon:'fa-user-plus', color:'bg-primary' };
    if(type === 'donation') return { icon:'fa-donate', color:'bg-success' };
    if(type === 'event') return { icon:'fa-calendar-check', color:'bg-warning' };
    if(type === 'message') return { icon:'fa-envelope', color:'bg-info' };
}
%>

                <div class="card border-0 shadow-sm">
             
                </div><div class="card border-0 shadow-sm">
    <div class="card-body">
        <h5 class="card-title mb-4">Recent Activity</h5>
        <div class="list-group list-group-flush">

            <% activities.forEach(function(act){ 
                var ui = getIcon(act.type);
            %>
            <div class="list-group-item border-0 px-0 py-3">
                <div class="d-flex align-items-center">
                    <div class="<%= ui.color %> text-white rounded-circle p-2 me-3">
                        <i class="fas <%= ui.icon %>"></i>
                    </div>
                    <div class="flex-grow-1">
                        <h6 class="mb-0"><%= act.title %></h6>
                        <small class="text-muted"><%= act.description %></small>
                    </div>
                    <small class="text-muted">
                        <%= new Date(act.time).toLocaleDateString() %>
                    </small>
                </div>
            </div>
            <% }) %>

        </div>
    </div>
</div>

