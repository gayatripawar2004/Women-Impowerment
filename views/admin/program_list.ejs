<%- include("navbar.ejs") %>

<div class="container my-5">
    <div class="card shadow border-0">
        <div class="card-body">

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4 class="text-danger">Program List</h4>
                <a href="/admin/program" class="btn btn-danger">
                    <i class="fas fa-plus me-2"></i>Add Program
                </a>
            </div>

            <div class="table-responsive">
                <table class="table table-bordered align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Image</th>
                            <th>Category</th>
                            <th>Title</th>
                            <th>Beneficiaries</th>
                            <th>Created At</th>
                            <th width="150">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(program_list.length === 0){ %>
                            <tr>
                                <td colspan="7" class="text-center text-muted">
                                    No programs found
                                </td>
                            </tr>
                        <% } %>

                        <% program_list.forEach(function(p, index){ %>
                        <tr>
                            <td><%= index + 1 %></td>

                            <td>
                                <% if(p.program_image){ %>
                                    <img src="../../<%- p.program_image %>" width="70" class="rounded">
                                <% } else { %>
                                    <span class="text-muted">No Image</span>
                                <% } %>
                            </td>

                            <td>
                                <span class="badge bg-danger"><%= p.program_category %></span>
                            </td>

                            <td><%= p.program_title %></td>

                            <td><%= p.program_beneficiaries %></td>

                            <td>
                                <%= new Date(p.created_at).toLocaleDateString() %>
                            </td>

                            <td>
                                <a href="/admin/program_edit/<%= p.program_id %>" class="btn btn-sm btn-warning">
                                    <i class="fas fa-edit"></i>
                                </a>

                                <a href="/admin/program_delete/<%= p.program_id %>"
                                   onclick="return confirm('Are you sure?')"
                                   class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

<%- include("footer.ejs") %>
